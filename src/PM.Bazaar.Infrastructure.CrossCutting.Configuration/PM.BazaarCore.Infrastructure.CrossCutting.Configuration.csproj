<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AssemblyName>PM.BazaarCore.Infrastructure.CrossCutting.Configuration</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="Configs.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Configs.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Configs.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Configs.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
